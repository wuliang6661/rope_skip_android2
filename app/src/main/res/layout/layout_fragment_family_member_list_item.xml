<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_layout_fragment_family_member_list_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingHorizontal="15dp"
    android:background="@drawable/selector_item_list_page"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_img_fragment_family_member_list_item"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@color/no_image" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/tv_title_layout_fragment_family_member_list_item"
        android:textSize="14sp"
        android:textColor="@color/colorText"/>
    
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="查看"
        android:textColor="@color/color_B9CAE0"/>
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginLeft="9dp"
        android:scaleType="centerInside"
        android:background="@mipmap/ic_next"/>

</LinearLayout>
