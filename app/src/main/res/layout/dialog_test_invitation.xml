<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:gravity="center_horizontal"
    android:id="@+id/ll_content_dialog_invitation"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="选择要分享的平台"
        android:textColor="@color/color_888888"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="11dp"
        android:background="@color/color_F8F8F8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_weixin_dialog_invitation"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_weixin_dialog_invitation"
                android:layout_height="28dp"
                android:layout_width="34dp"
                android:layout_marginVertical="11dp"
                android:background="@mipmap/ic_weixin"
                android:scaleType="centerInside" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_pyq_dialog_invitation"
            android:layout_marginHorizontal="70dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_pyq_dialog_invitation"
                android:layout_height="30dp"
                android:layout_width="31dp"
                android:layout_marginVertical="10dp"
                android:background="@mipmap/ic_pyq"
                android:scaleType="centerInside" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_save_picture_dialog_invitation"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_save_picture_dialog_invitation"
                android:layout_height="30dp"
                android:layout_width="31dp"
                android:layout_marginVertical="10dp"
                android:background="@mipmap/ic_save_picture"
                android:scaleType="centerInside" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="保存相册"
                android:textColor="@color/colorText"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/color_F8F8F8" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_cancer_dialog_invitation"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="取消分享"
        android:textColor="@color/colorText"
        android:textSize="14sp" />

</LinearLayout>