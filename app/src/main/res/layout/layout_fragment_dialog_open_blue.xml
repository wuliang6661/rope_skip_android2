<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_content_layout_fragment_dialog_add_img"
    android:orientation="vertical"
    android:background="@drawable/bg_blue_dialog_item"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10">
       <android.support.v7.widget.AppCompatImageView
           android:layout_width="18dp"
           android:layout_height="21dp"
           android:background="@mipmap/lanya"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:text="智能跳绳APP请求打开蓝牙"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10">
       <android.support.v7.widget.AppCompatTextView
           android:layout_width="0dp"
           android:layout_height="34dp"
           android:layout_weight="1"
           android:gravity="center"
           android:id="@+id/tv_refuse_layout_fragment_dialog_open_blue"
           android:background="@color/color_F4F4F4"
           android:text="拒绝"
           android:textColor="#888888"/>
       <android.support.v7.widget.AppCompatTextView
           android:layout_width="0dp"
           android:layout_height="34dp"
           android:layout_weight="1"
           android:gravity="center"
           android:id="@+id/tv_pass_layout_fragment_dialog_open_blue"
           android:background="@color/color_7EC7F5"
           android:text="打开"
           android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
