<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundGray">

    <com.habit.commonlibrary.widget.ToolbarWithBackRightProgress
        android:id="@+id/toolbar_fragment_modify_psw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_toolbar_default"
        android:background="@color/colorToolbarBg"
        app:tl_brp_back_ib_drawable="@mipmap/ic_backarrow"
        app:tl_brp_bottom_divider_visibility="visible"
        app:tl_brp_left_text="@string/setting"
        app:tl_brp_left_text_color="@color/colorText"
        app:tl_brp_right_text_color="@color/colorText"
        app:tl_brp_title="@string/modify_password"
        app:tl_brp_title_text_color="@color/colorText" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_order_password"
        android:inputType="textPassword"
        android:digits="@string/accepted_char"
        android:hint="原密码" />
    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_new_password"
        android:inputType="textPassword"
        android:digits="@string/accepted_char"
        android:hint="新密码" />
    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_confirm_new_password"
        android:inputType="textPassword"
        android:digits="@string/accepted_char"
        android:hint="确认密码" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_submit_fragment_modify_psw"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_common"
        android:layout_marginTop="15dp"
        android:background="@drawable/list_item_touch_bg"
        android:text="确定提交"
        android:textColor="@color/color_0088cc"
        android:textSize="15dp" />

    <com.habit.commonlibrary.widget.ProgressbarLayout
        android:id="@+id/progress_fragment_modify_psw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</LinearLayout>
