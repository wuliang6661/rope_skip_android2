<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lilay_item_edit_text_with_divider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/minheight_layout_lilay_item_edit_text_with_divider"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_item_edit_text_with_divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="start|center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_layout_lilay_item_edit_text"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_divider_vertical_item_edit_text_with_divider"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            android:background="#A0A0A0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_content_item_edit_text_with_divider"
                style="@style/EditTextStyle_WithoutStroke_multiline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="text"
                android:hint="请输入"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="end"
                android:textSize="@dimen/text_size_layout_lilay_item_edit_text" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_divider_item_edit_text_with_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/divider_tv_background_color"
        android:visibility="visible" />

</LinearLayout>